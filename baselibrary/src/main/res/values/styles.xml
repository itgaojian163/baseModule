<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/login_back</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!--创建沉浸式状态栏-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--</style>-->

    <!--TextView_style-->
    <style name="home_username_info">
        <item name="android:textColor">@color/text_write_FD</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowBackground">@null</item>//背景
        <item name="android:windowIsFloating">true</item>//悬浮
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--只适应大小-->
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--固定款-->
    <style name="wrap_content2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--等分-->
    <style name="dengfen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--等分-->
    <style name="dengfen_h">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActivityEntryAnimation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 去除Activity顶部黑线 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 系统状态栏背景设置透明 -->
        <!--<item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">@color/text_write_FF</item>-->
        <!-- Activity背景 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowBackground">@color/text_write_FF</item>-->
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog_ChoseFile" parent="@android:style/Theme.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit</item>
    </style>
    <style name="dialog_condition" parent="@android:style/Theme.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/anim_dialog_condition_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_condition_exit</item>
    </style>
    <style name="btn_update_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:background">@drawable/sel_rectangle_btn_white_gray_no_radius</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="buttonDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
    </style>
    <!--默认Dialog背景全透明无边框theme-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <!--背景颜色和透明程度-->
        <!--<item name="android:windowBackground">@color/dialog_transparent</item>-->
        <!--是否去除标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>

    </style>

    <!--    动画 -->
    <!--    默认 -->
    <style name="li_dialog_default" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_default_show</item>  <!--显示动画-->
        <item name="android:windowExitAnimation">@anim/li_dialog_default_cancel</item> <!--消失动画-->
    </style>
    <!--    默认 -->
    <style name="li_dialog_scale" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_scale_show</item>  <!--显示动画-->
        <item name="android:windowExitAnimation">@anim/li_dialog_scale_cancel</item> <!--消失动画-->
    </style>

    <!--    left -->
    <style name="li_dialog_translate_left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_left_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_left_cancel</item>
    </style>

    <!--    top -->
    <style name="li_dialog_translate_top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_top_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_top_cancel</item>
    </style>

    <!--    right -->
    <style name="li_dialog_translate_right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_right_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_right_cancel</item>
    </style>

    <!--    bottom -->
    <style name="li_dialog_translate_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_bottom_cancel</item>
    </style>
</resources>